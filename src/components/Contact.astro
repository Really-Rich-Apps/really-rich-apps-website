<section class="py-20 px-6 bg-gray-900">
  <h2 class="text-3xl font-semibold text-center mb-12">Get in Touch</h2>
  <form action="https://formspree.io/f/moqzlyyw" method="POST" class="max-w-xl mx-auto bg-gray-800 p-6 rounded-lg shadow-lg space-y-4">
    <input class="w-full p-3 rounded bg-gray-700 text-white" type="text" name="name" placeholder="Your Name" required />
    <input class="w-full p-3 rounded bg-gray-700 text-white" type="email" name="email" placeholder="Your Email" required />
    <textarea class="w-full p-3 rounded bg-gray-700 text-white" name="message" rows="5" placeholder="Your Message..." required></textarea>
    <button class="bg-yellow-500 hover:bg-yellow-400 text-black font-bold py-2 px-4 rounded" type="submit">Send Message</button>
  </form>
</section>
